% Shadow boxes for images
% code adapted from https://tex.stackexchange.com/a/11483/3954

\providecommand\circleimage[2]{%
	\begin{figure}
	\begin{tikzpicture}
		\node[circle,draw=black,
			fill=black,
			path picture={
				\node at (path picture bounding box.center){
					\includegraphics[width=#1]{#2}
				};
			}, inner sep=0pt, minimum size=#1]{};
	\end{tikzpicture}
	\end{figure}}

\mode<all>
